         </children>
      </Pane>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="42.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../pictures/LOGO.png" />
         </image>
      </ImageView>
    </children>
